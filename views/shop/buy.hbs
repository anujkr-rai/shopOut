<h1>Your order has been successfully placed!</h1>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        
        <h1>{{username}}</h1>
        <hr>
        <h2>My Orders</h2>
        {{#each orders}}
        <div class="panel panel-default">
                    <ul class="list-group">
                {{#each this.items}}
                    <li class="list-group-item">
                      <span class="badge">{{ this.item.price }}</span>
                       ({{ this.item.title }}) | {{ this.qty }}
                       </li>
                {{/each}}
                </ul>
                </div>
                <div class="panel-footer">${{this.cart.totalPrice}}</div>
            </div>
        {{/each}}

         {{!-- ############################## --}}

        <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="list-group">
                {{# each products }}
                    <div class="list-group-item border">
                        <strong>{{ this.item.title }} ({{this.item.description}})</strong>
                        <span class="badge price-cart">Rs. {{ this.item.price }}</span>
                        
                        <span class="total">Quantity:{{ this.qty }}</span>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <strong>Total: Rs. {{ totalPrice }}</strong>
        </div>

<br><br>

        <h3>Order Details : </h3>
        <h5>Name : {{name}}</h5>
        <h5>Address : {{address}}</h5>
    </div>


    </div>
</div>