<div class="signup"
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 col-md-offset-4 main">
        <h1>  Sign Up   </h1>
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{#each messages }}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}
        <form action="/user/signup" method="post">
        <div class="newclass"><!-- email type is text-->
            
                <label for="Username">Username</label>
                <input type="text" id="username" name="username" class="form-control">
                
            </div>
            <div class="newclass"><!-- email type is text-->
            
                <label for="email">E-Mail</label>
                <input type="text" id="email" name="email" class="form-control">
                
            </div>
            <div class="newclass"><!-- password type is password -->
            
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control">
                
            </div>



        <div class="newclass" style="float:inherit">
            <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
            <label class="form-check-label" for="invalidCheck" >
                Agree to terms and conditions
            </label>
            <div class="invalid-feedback">
                You must agree before submitting.
            </div>
            </div>
        </div>



            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <button type="submit" class="btn btn-raised btn-info main">Sign Up</button>
        </form>
    </div>
</div>
</div>